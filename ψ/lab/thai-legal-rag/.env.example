# Thai Legal RAG â€” Environment Variables
# Copy to .env and fill in values

# Gemini API keys (comma-separated for rotation)
GEMINI_API_KEYS=your-key-1,your-key-2

# Google Drive OAuth2
# Path to credentials.json (downloaded from Google Cloud Console)
GOOGLE_CREDENTIALS_JSON=/path/to/credentials.json
# Path to token.json (auto-created after first browser auth)
# GOOGLE_TOKEN_JSON=/path/to/token.json  # optional, defaults to same dir as credentials

# Drive folder IDs per category
DRIVE_FOLDER_CGD=your-folder-id-for-cgd
DRIVE_FOLDER_ADMIN_COURT=your-folder-id-for-admin-court
DRIVE_FOLDER_AG=your-folder-id-for-ag

# Data storage directory (default: /tmp/thai-legal-rag)
THAI_RAG_DATA_DIR=/data/thai-legal-rag
